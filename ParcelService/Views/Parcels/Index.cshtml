<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Shipping List</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  </head>
  <body>
    @using ParcelService.Models;

    <h1>Shipping List</h1>

    @if (Model.Count == 0)
    {
      <p>There are no items in the list.</p>
    }
    <ul>
      @foreach (Parcel parcel in Model)
      {
        <li>@parcel.Volume(parcel.Height, parcel.Width, parcel.Length), @Parcel.CostToShip(parcel.Weight)</li>
      }
    </ul>
    <p>Shipping total: $@Parcel.GetTotal()</p>
    <a href="/parcels/new">Add a new item.</a>
  </body>
</html>